<h1>Add a New Restaurant</h1>

<%= form_for @restaurant do |f| %>
<div class="field">
	<%= f.label :name %> 
	<%= f.text_field :name %>
</div>

<div class="field">
	<%= f.label :description %>
	<%= f.text_area :description %>
</div>

<div class="field">
	<%= f.label :address %>
	<%= f.text_field :address %>
</div>

<div class="field">
	<%= f.label :hours_open %>
	<%= f.text_field :hours_open %>
</div>

<div class="field">
	<%= f.label :hours_closed %>
	<%= f.text_field :hours_closed %>
</div>

<div class="actions"><%= f.submit %></div>

<% end %>

