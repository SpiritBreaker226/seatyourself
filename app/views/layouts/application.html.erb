<!DOCTYPE html>
<html>
<head>
  <title>Opentable</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header class="cf">

		<h1><img src="/assets/seat.svg"></h1>
		<nav>
			<ul>
				<li><%= link_to 'Restaurants List', restaurants_path %></li>
				<li><%= link_to 'Add Restaurant', new_restaurant_path %></li>

			<ul>
		</nav>

		<% if current_user %>
			Signed in as <%= current_user.name %>. <%= link_to("Log out", session_path("current"), method: :delete) %>
		<% else %>
			<%= link_to("Log in", login_path) %> / <%= link_to("Sign up", signup_path) %>
		<% end %>
	</header>

	<div class="wrapper cf">
	
		<% if flash[:notice] %>
		  <p id="notice"><%= flash[:notice] %></p>
		<% end %>
		<% if flash[:alert] %>
		  <p id="alert"><%= flash[:alert] %></p>
		<% end %>
		<%= yield %>
	</div>
</body>
</html>
